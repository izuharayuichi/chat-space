.wrapper
  = render partial: "devise/shared/sidebar"
  .main
    .header
      .header-left
        %p.header-left__current-group
          current_group_name
        %p.header-left__current-group-members
          Members:current_group_members
      .header-right
        %a.header-right__header-right__edit-btn
          Edit
    .messages
      .a-message
        .name-and-date
          %p.name-and-date__post-user
            post-user
          %p.name-and-date__post-date
            post-date
        %p.text
          text
        %img.pic
          img
      .a-message
        .name-and-date
          %p.name-and-date__post-user
            post-user2
          %p.name-and-date__post-date
            post-date2
        %p.text
          text2
        %img.pic
          img2
      .a-message
        .name-and-date
          %p.name-and-date__post-user
            post-user3
          %p.name-and-date__post-date
            post-date3
        %p.text
          text3
        %img.pic
          img3
    .form
      %form
        .input-box
          = form_for [@group, @message] do |f|
            = f.text_field :content, class: 'input-left', placeholder: 'type a message'
            .input_left
              = f.label :image, class: 'input-left__icon' do
                %i.fa.fa-image
                = f.file_field :image, class: 'hidden'
            = f.submit 'Send', class: 'submit-btn'
